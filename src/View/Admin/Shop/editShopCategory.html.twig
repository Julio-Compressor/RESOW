{% extends 'layoutAdmin.html.twig' %}

{% block content %}
<main>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Nom</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <form method="post" action="updateCategory?id={{category.id}}" >
                    <td><input type="text" name="name" value="{{ category.name }}" required></td>
                        <input type="hidden" name="id" value="{{ category.id }}">
                    </td>
                    <td><button class="btn btn-primary" type="submit">Update</button></td>                    
                </form>
            </tr>
        <tbody>
    </table>
</main>
{% endblock %}