{% extends 'layoutAdmin.html.twig' %}

{% block content %}
<div class="modify-category">
    <h1>Edition des categories</h1>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col"></th>
                    <th scope="col">Editer</th>
                </tr>
            </thead>
        <tbody>
        {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td><a href="shop/deleteCategory?id={{category.id}}">Delete</a></td>
            <td><a href="shop/editCategory?id={{category.id}}">Edit</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="add-categoty">
    <h1>Ajouter un article</h1>
        <form action="shop/addCategory" method="post" class="row g-3">
            <div class="row">
                <div class="col-md-12">
                    <label for="name" class="form-label">Nom</label>
                    <input type="text" name="name" class="form-control" id="name" required>
                </div>
            </div>        
            <div class="col-md-12">
                <button class="btn btn-primary" type="submit">Ajouter</button>
            </div>
        </form>

</div>
<div class="modify-article">
    <h1>Edition des articles</h1>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Description</th>
                    <th scope="col">N° categorie</th>
                    <th scope="col">Nom de l'image</th>
                    <th scope="col"></th>
                    <th scope="col">Editer</th>
                </tr>
            </thead>
        <tbody>
        {% for article in articles %}
        <tr>
            <td>{{ article.id }}</td>
            <td>{{ article.name }}</td>
            <td>{{ article.price }} </td>
            <td>{{ article.description }}</td>
            <td>{{ article.category_id }}</td>
            <td>{{ article.img_name }}</td>
            <td><a href="shop/delete?id={{article.id}}">Delete</a></td>
            <td><a href="shop/edit?id={{article.id}}">Edit</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="add-article">
    <h1>Ajouter un article</h1>
        <form action="shop/add" method="post" class="row g-3">
            <div class="row">
                <div class="col-md-6">
                    <label for="name" class="form-label">Nom</label>
                    <input type="text" name="name" class="form-control" id="name" aria-describedby="ville"required>
                </div>
            </div>        
            <div class="row">
                <div class="col-md-2">
                    <label for="price" class="form-label">Prix</label>
                    <input type="text" name="price" class="form-control" id="price"  required>
                </div>            
                <div class="col-md-2">
                    <label for="category_id" class="form-label">N° de la categorie</label>
                    <input type="number" name="category_id" class="form-control" id="category_id" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="img_name" class="form-label">Nom de l'image</label>
                    <input type="text" name="img_name" class="form-control" id="img_name" aria-describedby="ville" placeholder="important: le même nom que la categorie" required>
                </div>
            </div>     
            <div class="row">
                <div class="col-md-6">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="textarea" name="description" class="form-control" id="description" ></textarea>
                </div>
            </div>
            <div class="col-md-12">
                <button class="btn btn-primary" type="submit">Ajouter</button>
            </div>

        </form>

</div>
{% endblock %}
