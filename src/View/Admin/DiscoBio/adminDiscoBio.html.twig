{% extends 'layoutAdmin.html.twig' %}

{% block content %}
<section>
    <h1>Edition des Albums</h1>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">TITLE</th>
                <th scope="col">TYPE</th>
                <th scope="col">NB_TRACK</th>
                <th scope="col">PRICE</th>
                <th scope="col">DATE</th>
                <th scope="col">DESCRIPTION</th>
                <th scope="col">VALIDATION</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
        <tr>
            <td>{{ album.title }}</td>
            <td>{{ album.type }} </td>
            <td>{{ album.nb_track }}</td>
            <td>{{ album.price }}</td>
            <td>{{ album.date }}</td>
            <td><a href="/admin/discoBio/delete?id={{album.id}}">Delete</a></td>
            <td><a href="discoBio/edit?id={{album.id}}">Edit</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <h1>Ajouter un Album</h1>
</section>
{% endblock %}
