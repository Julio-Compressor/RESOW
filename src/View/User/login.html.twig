{% extends 'layout.html.twig' %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}

{% block content %}
	<form method="post">
		<section class="vh-80 gradient-custom">
			<div class="container py-5 h-100">
				<div class="row d-flex justify-content-center align-items-center h-50">
					<div class="col-12 col-md-8 col-lg-6 col-xl-5">
						<div class="card bg-dark">
							<div class="card-body p-5 text-center">
								<div class="mb-md-5 mt-md-4 pb-5">
									<h2 class="fw-bold mb-2 text-uppercase">Connexion</h2>
									{% if errors %}
										<h5>Merci de corriger les erreurs suivantes.</h5>
										<p>
											{% for error in errors %}
											</p>
										</p>
										<p class="error-message">{{ error }}</p>
									{% endfor %}
								{% endif %}
							</p>
							<p class="text-white-50 mb-5">Entrez vos informations de connexion</p>
							<div data-mdb-input-init class="form-outline form-white mb-4">
							<label class="form-label" for="typeEmailX">Email</label>
								<input type="email" id="typeEmailX" class="form-control form-control-lg" name="email" value="" required/>
							</div>
							<div data-mdb-input-init class="form-outline form-white mb-4">
							<label class="form-label" for="typePasswordX">Mot de passe</label>
								<input type="password" id="typePasswordX" class="form-control form-control-lg" name="password" value="" required/>
							</div>
							<button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit">Connexion</button>
						</div>
						<div>
							<p class="mb-0">Vous n'avez pas encore de compte ?
								<a href="/register" class="text-white-50 fw-bold">S'inscrire</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section></form>{% endblock %}
