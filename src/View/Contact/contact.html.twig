{% extends 'layout.html.twig' %}
{% block title %}RESOW | Contact
{% endblock %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/contact.css">
{% endblock %}
{% block content %}
	<form method="post">
		<section class="vh-80 gradient-custom">
			<div class="container py-5 h-100">
				<div class="row d-flex justify-content-center align-items-center h-50">
					<div class="col-12 col-md-8 col-lg-6 col-xl-5">
						<div class="card bg-dark">
							<div class="card-body p-5 text-center">
								<div class="mb-md-5 mt-md-4 pb-5">
									<h2 class="fw-bold mb-2 text-uppercase">Formulaire de contact</h2>
									<div class="form-group-2">
										<label for="texte">Nom</label>
										<input type="texte" id="texte" name="name" class="form-control mx-sm-0">
									</div>
									<div class="form-group">
										<label for="texte">Prénom</label>
										<input type="texte" id="texte" name="firstname" class="form-control mx-sm-0">
									</div>
									<div class="form-group">
										<label for="email">Email</label>
										<input type="email" id="email" name="email" class="form-control mx-sm-0">
									</div>
									<fieldset class='statut'>
										<legend>Vous êtes un :</legend>
										<label class='part' for="Particulier">Particulier</label>
										<input class="particulier" type="checkbox" id="particulier" name="particulier">
										<label class='pro' for="Professionnel">Professionnel</label>
										<input class="professionnel" type="checkbox" id="professionnel" name="professionnel">
									</fieldset>
									<div class="form-group">
										<label for="texte">Message</label>
									</div>
									<div>
										<textarea class='ContactMessage' name='message' rows='10' cols="1" maxrows="10" maxcols="1" maxlength="600" style="resize:none;" wrap="hard"></textarea>
									</div>
									<button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-2" type="submit">Envoyez</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</form>{% endblock %}
